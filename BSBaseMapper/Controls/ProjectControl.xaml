<UserControl x:Class="BSBaseMapper.Controls.ProjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BSBaseMapper.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl x:Name="tabControl" Margin="0,25,0,0">
        </TabControl>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,2,0,0">
            <Button x:Name="buttonEdit" d:Visibility="Visible" Visibility="Collapsed" Margin="0,0,5,0">Edit</Button>
            <Button x:Name="buttonSave" d:Visibility="Visible" Visibility="Collapsed" Margin="0,0,5,0">Save</Button>
            <Button x:Name="buttonCancel" d:Visibility="Visible" Visibility="Collapsed" Margin="0,0,5,0">Cancel</Button>
        </StackPanel>
        
    </Grid>
</UserControl>
