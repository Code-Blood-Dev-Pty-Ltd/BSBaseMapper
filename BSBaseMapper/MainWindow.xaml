<Window x:Class="BSBaseMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSBaseMapper"
        xmlns:c="clr-namespace:BSBaseMapper.Controls"
        mc:Ignorable="d"
        Title="BS Base Mapper" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu Margin="0,0,0,0" VerticalAlignment="Top" Height="20">
            <MenuItem Header="FILE">
                <MenuItem Header="Open Info File" x:Name="menuItemOpenInfoFile"></MenuItem>
                <MenuItem Header="Open Map File" x:Name="menuItemOpenMapFile"></MenuItem>
                <MenuItem Header="Close File(s)" x:Name="menuItemCloseFiles" IsEnabled="False"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid Margin="0,20,0,0">
            <c:ProjectControl x:Name="projectControl"></c:ProjectControl>
        </Grid>
    </Grid>
</Window>
